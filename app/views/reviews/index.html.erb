<section class="section mt-6">
  <div class="container">
    <div class="col d-flex justify-content-center">
      <div class="col-md-5">
        <div class="card mb-6">
          <header class="card-header">
            <p class="card-title">
              <%= @recipe.title %>
            </p>
          </header>
          <div class="card-body">
            <div class="card-text average-score">
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width: <%= @recipe.review_score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">
                <%= @recipe.avg_score %>（<%= @recipe.reviews.count %> Reviews）
              </div>
            </div>
          </div>
        </div>
        <table class="table text-centered">
          <thead>
            <tr>
              <th>User</th><th>Rating</th><th>Content</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= review.user.username %></td>
                <td><%= review.score %></td>
                <td><%= review.content %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

<h1 class='text-center'><%= full_name(@user) %> recipes:</h1>

<div class='d-flex jumbotron mt-4 col-md-9 mx-auto'>
  <div class='row justify-content-center mt-4' id='dashboard-container'>
    <% if @all_recipes.any? %>
      <%= render partial: 'recipes/recipe_dashboard', locals: { recipes: @all_recipes } %>
    <% end %>
  </div>
</div>

<div class='d-flex justify-content-center mt-3'><%= paginate @all_recipes %></div>

<div class="progress">
  <div class='progress-bar' style="width: <%= @progress %>%">
  </div>
</div>

<h4 class='mt-4'><%= t('.stage_3') %></h4>
<%= form_for @recipe, url: wizard_path do |form| %>
  <div class="form-group field mt-3 mb-2">
    <%= form.fields_for :ingredients do |ingredient_fields| %>
      <%= ingredient_fields.rich_text_area :content, class: "form-control mt-2 customized-min-height", placeholder: 'Content' %>
      <%= ingredient_fields.check_box :_destroy, class: "mt-3" %> <%= t('global.delete?') %>
    <% end %>
  </div>

  <div class="actions mt-4">
    <%= form.submit t('global.next'), class: 'btn btn-primary' %>
    | <%= link_to t('global.skip'), next_wizard_path, class: 'text-decoration-none' %>
  </div>
<% end %>

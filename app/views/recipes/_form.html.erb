<%= form_with(model: recipe) do |form| %>
  <% if recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <strong>Recipe:</strong>
  <div class="form-group field mt-3 mb-2">
    <%= form.text_field :title, class: "form-control", placeholder: 'Recipe title' %>
  </div>

  <div class="form-group field mt-3 mb-2">
    <%= form.text_area :description, class: "form-control", placeholder: 'Description' %>
  </div>

  <div class="form-group field mt-3 mb-2">
    <%= form.label :recipe_image, class: "form-control" %>
    <%= form.file_field :recipe_image, class: "form-control" %>
  </div>

  <strong>Ingredients:</strong>
  <div class="form-group field mt-3 mb-2">
    <%= form.fields_for :ingredients do |ingredient_fields| %>
      <%= ingredient_fields.text_area :content, class: "form-control mt-2", placeholder: 'Content' %>
      <%= ingredient_fields.text_field :quantity, class: "form-control mt-2", placeholder: 'Quantity' %>
      <%= ingredient_fields.check_box :_destroy, class: "mt-3" %> Delete?
    <% end %>
  </div>

  <strong>Steps:</strong>
  <div class="form-group field mt-3 mb-2">
    <%= form.fields_for :steps do |step_fields| %>
      <%= step_fields.text_area :method, class: "form-control mt-2", placeholder: 'Method' %>
      <%= step_fields.check_box :_destroy, class: "mt-3" %> Delete?
    <% end %>
  </div>

  <div>
    <%= form.label :step_images, class: "form-control mt-2" %>
    <%= form.file_field :step_images, multiple: true, class: "form-control" %>
  </div>

  <div class="form-group actions mt-4 mb-2">
    <%= link_to 'Back', recipes_path, class: "btn btn-light" %>
    <% if @recipe.persisted?%>
    <%# unless @recipe.new_record? %>
    <%# if controller_name == 'recipes' && action_name == 'edit' %>
      <%= link_to 'Show', @recipe, class: "btn btn-secondary" %>
      <%#= link_to_if(controller_name == 'recipes' && action_name == 'edit', "Show", @recipe, { class: "btn btn-secondary" }) %>
    <% end %>
    <%= form.submit link_form(recipe), class: "btn btn-primary" %>
  </div>
<% end %>

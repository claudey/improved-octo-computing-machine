<%= form_with model: [recipe, comment], class: 'new_comment mt-4 offset-1', local: false do |f| %>
  <%= f.text_field :body, class: "form-control mb-2", placeholder: 'Add comment...' %>
  <%= f.submit t('.commnet'), class: "btn btn-secondary mt-3"  %>
  <%= link_to t('global.back'), recipe_path(recipe), class: "btn btn-light mt-3", "data-turbo-frame": "_top" %>
<% end %>

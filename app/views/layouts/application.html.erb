<!DOCTYPE html>
<html>
  <head>
    <title>Recipes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/484e6509e8.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

  <body data-controller-name=<%= controller_name %>
        data-action-name=<%= action_name %>
        data-user-id=<%= current_user&.id %>
        data-locale=<%= I18n.locale %> 
        class="<%= cookies[:theme] %>">
    <%= render 'shared/navigation' %>

    <div class="container mt-3">
      <%= render 'shared/toastr_flash', flash: flash %>
        <%= yield %>
    </div>
    <%= render 'shared/footer' %>
      <!--
    <footer>
      <div class="debug-footer">
        <%= debug(params) if Rails.env.development? %> current page: <%= request.fullpath.downcase %>
      </div>
    </footer>
      -->
  </body>
</html>

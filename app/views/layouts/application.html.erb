<!DOCTYPE html>
<html>
  <head>
    <title>Recipes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
</head>

  <body data-controller-name=<%= controller_name %> data-action-name=<%= action_name %> data-user-id=<%= current_user&.id %>>
    <%= render 'shared/navigation' %>
    <div class="container mt-3">
      <%= render 'shared/flash', flash: flash %>
        
        <%= yield %>
   
      <!-- <div class="debug-footer"><%= debug(params) if Rails.env.development? %></div> -->
    </div>
  </body>
</html>

<nav class="navbar navbar-expand-md <%= background_select %>">
  <div class="container">
    <button aria-controls="RecipeNavbar" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbarMain" data-toggle="collapse" type="button">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarMain">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <%= link_to root_path, class: "logo-img nav-link #{'active' if controller_name == 'dashboard'}" do %>
            <%= image_tag("Logo_mini.png").html_safe %>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "Recipes", recipes_path, class: "nav-link #{is_active('recipes','index')}" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to_if(user_signed_in?, "New Recipes", new_recipe_path, { class: "nav-link #{is_active('recipes','new')}" }) %>
          </li>
          <% if current_user.admin? %>
            <ul class="navbar-nav">
              <li class="nav-item dropdown">
                <%= link_to 'Category', "#", class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", 'data-bs-toggle' => "dropdown", aria: { expanded: "false", haspopup: true } %>
                <ul aria-labelledby="navbarDropdown" class="dropdown-menu dropdown-menu-right" id="nav-account-dropdown">
                  <li>
                    <%= link_to "Category list", categories_path, class: "nav-link mx-1" %>
                  </li>
                  <li>
                    <%= link_to "New Category", new_category_path, class: "nav-link mx-1" %>
                  </li>
                  <li class="dropdown-divider"></li>
                  <li>&nbsp;&nbsp;Parents Category:</li>
                  <% Category.order(:name).roots.each do |category| %>
                    <li>
                      <%= link_to category, class: "nav-link mx-1" do %>
                        <span>&rang; <span><%= category.name %>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
              </li>
            </ul>
          <% end %>
          <li class="nav-item">
            <%= link_to "Favorites", recipes_favorites_path, class: "nav-link #{is_active('recipes','favorites')}" %>
          </li>
        <% end %>
        <li class="nav-item">
          <% if cookies[:theme] == "light" %>
            <%= link_to root_path(theme: "dark"), class: "nav-link", data: {'bs-toggle' => "tooltip", 'bs-placement' => "bottom"}, title: "Change color theme." do %>
              <i class="fas fa-toggle-on"><span class='fw-normal'> Theme Dark</span></i>
            <% end %>
          <% else %>
            <%= link_to root_path(theme: "light"), class: "nav-link" do %>
              <i class="opacity-75 fas fa-toggle-on"><span class='fw-normal'> Theme Light</span></i>
            <% end %>
          <% end %>
        </li>
      </ul>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <%= link_to "#", class: "nav-link dropdown-toggle", id: "navbarDropdown", role: "button", 'data-bs-toggle' => "dropdown", aria: { expanded: "false", haspopup: true }  do %>
              Welcome, <%= full_name(current_user) %>&nbsp;
              <%= image_tag user_avatar(current_user), class: "rounded-circle" %>
            <% end %>
            <ul aria-labelledby="navbarDropdown" class="dropdown-menu dropdown-menu-right" id="nav-account-dropdown">
              <li>
                <%= link_to "Personal page", user_path(current_user), class: "dropdown-item" %>
              </li>
              <li>
                <%= link_to 'My recipes', recipes_user_path(current_user), class: 'dropdown-item' %>
              </li>
              <li>
                <%= link_to "Accounts", edit_user_registration_path, class: "dropdown-item" %>
              </li>
              <li class="dropdown-divider"></li>
              <li>
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
<%= form_with url: search_path, method: :get, class: 'd-flex',
    data: { action: "ajax:success->search#handleResults", "search-target" => "form" },
    local: false do |form| %>
  <div class='d-flex'>
    <%= form.label :search, nil, for: 'autocomplete-input' do %>
      <span class="input-group-text" id="basic-addon1" style="text-align:center;">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="24" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
          <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
        </svg>
      </span>
    <% end %>
    <%= form.text_field :search, data: { action: "input->search#search" },
                          autocomplete: "off",
                          placeholder: 'Search',
                          class: 'form-control me-2 bg-transparent border border-light',
                          id: 'autocomplete-input' %>
  </div>
<% end %>

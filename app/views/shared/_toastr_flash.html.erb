<% unless flash.empty? %>
  <script type="text/javascript">
    <% flash.each do |f| %>
      <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
      toastr['<%= type %>']('<%= f[1] %>', '', {"closeButton": true,
                                            "positionClass": "toast-top-right",
                                            "onclick": null,
                                            "showDuration": "500",
                                            "hideDuration": "1000",
                                            "timeOut": "5000",
                                            "extendedTimeOut": "1000",
                                            "showEasing": "swing",
                                            "hideEasing": "linear",
                                            "showMethod": "fadeIn",
                                            "progressBar": false,
                                            "hideMethod": "fadeOut" });
    <% end %>
  </script>
<% end %>

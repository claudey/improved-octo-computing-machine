<div class="col-lg-4 col-md-6 mx-auto">
  <h1 class="text-center">Sign Up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render partial: 'devise/shared/error_messages', resource: resource %>

    <div class="form-group mt-4">
      <div class="row">
        <div class="col-sm-4">
          <%= image_tag user_avatar(resource, 100), class: "rounded-circle" %>
        </div>
        <div class="col-sm-8 d-flex align-items-center">
          <%= f.file_field :avatar, class: 'form-control', placeholder: "Email Address" %>
        </div>  
      </div>
    </div>


    <div class="form-group mt-3">
      <%= f.label :username %>
      <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: "Username" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Email Address" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: false, class: 'form-control', placeholder: "First name" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, autofocus: false, class: 'form-control', placeholder: "Last name" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
    </div>

    <div class="form-group mt-4">
      <%= render "devise/shared/links" %>
      <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
</div>
